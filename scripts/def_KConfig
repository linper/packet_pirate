menu "Defaults"
config DFN_DEF_USE_BPF
bool "Use BPF"
default n
help
	Utilize full Berkley packet filter support with query string

config DFN_DEF_BPF
string "BPF"
default "tcp"
depends on DFN_DEF_USE_BPF

config DFN_DEF_DHOST
string "Destination host"
default ""
depends on !DFN_DEF_USE_BPF

config DFN_DEF_DNET
string "Destination network"
default ""
depends on !DFN_DEF_USE_BPF

config DFN_DEF_DPORT
string "Destination port"
default ""
depends on !DFN_DEF_USE_BPF

config DFN_DEF_PROTO
string "Protocol"
default "tcp"
depends on !DFN_DEF_USE_BPF

config DFN_DEF_SHOST
string "Source host"
default ""
depends on !DFN_DEF_USE_BPF

config DFN_DEF_SNET
string "Source network"
default ""
depends on !DFN_DEF_USE_BPF

config DFN_DEF_SPORT
string "Source port"
default ""
depends on !DFN_DEF_USE_BPF

config DFN_DEF_SNAPLEN
int "Snaplength"
default 1600
help
	Maximum capturable length of packet	

config DFN_DEF_AUTO_IF
bool "Auto interface selection"
default y
help
	Automaticly select which interface to sniff

config DFN_DEF_IF_LO
default y
bool "Allow loopback"
depends on DFN_DEF_AUTO_IF

config DFN_DEF_IF_WI
default y
bool "Allow wireless"
depends on DFN_DEF_AUTO_IF

config DFN_DEF_IF_OUP
default n
bool "Only UP"
depends on DFN_DEF_AUTO_IF

config DFN_DEF_IF_ORN
default n
bool "Only RUNNING"
depends on DFN_DEF_AUTO_IF

config DFN_DEF_IF
string "Target interface"
default "eth0"
depends on !DFN_DEF_AUTO_IF
	
endmenu
